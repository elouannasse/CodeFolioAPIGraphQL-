# Server Configuration
PORT=4000
NODE_ENV=development

# MongoDB Configuration (Latest MongoDB v8)
MONGODB_URI=mongodb://localhost:27017/codefolio

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
